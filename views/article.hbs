{{!-- 
    Page Article
    /article
--}}

<h1>Article</h1>

{{!-- 
    Req Flash
--}}
{{#if errors }}
    <h4 style='color: red'> {{ errors }} </h4>
{{/if }}

{{#if success }}
  <h4 style='color: green'> {{ success }} </h4>
{{/if }}


<h2><u>Liste Article:</u></h2>

{{!-- 
    Dans le block en dessous ce trouve la boucle des articles
    retrouver le dans ./partial/article
--}}
{{> article/listArticle }}


{{!-- 
    Dans le block en dessous le boutton de suppression de tout les articles
    retrouver le dans ./partial/article
--}}
{{> article/deleteAllArticle }}


{{!-- 
    Dans le block en dessous le boutton d'ajout d'article
    retrouver le dans ./partial/article
--}}
{{> article/createArticle }}

