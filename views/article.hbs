<h1>Article</h1>

<div>
    <h2><u>Liste Article:</u></h2>
    <div class="flx">
        {{#each dbArticle }}
        <div class="itm">
            <a href="/article/{{ _id }}">
                <h3>Titre: {{ title }}</h3>
            </a>
            <form action="/article/{{ this.id }}/?_method=DELETE" method="post">
                <button type="submit">Effacer</button>
            </form>
        </div>
        {{/each }}
    </div>
    <div class="itm">
        <h5>Tous supprimer ?</h5>
        <form action="/article/?_method=DELETE" method="post">
            <button type="submit">Effacer</button>
        </form>
    </div>
</div>

<div>
    <form action="/article" method="post">
        <input type="text" name="title" placeholder="Title">
        <button type="submit">Confirmer</button>
    </form>
</div>