<h1>Article</h1>

<div>
    <h2><u>Liste Article:</u></h2>
    <div class="flx">
        {{#each dbArticle }}
        <div class="itm">
            <h3>Titre: {{ title }}</h3>
            <img src="{{ imgArticle }}" style="heigth: 150px; width: 150px">
            <form action="/article/{{ this.id }}/?_method=DELETE" method="post">
            <button type="submit">Effacer</button>
        </form>
        </div>
        {{/each }}
    </div>
    <div class="itm">
        <h5>Tous supprimer ?</h5>
        <form action="/article/?_method=DELETE" method="post">
            <button type="submit">Effacer</button>
        </form>
    </div>
</div>

<div>
    <h4>Creer un article</h>
    {{!-- Ne pas oublier le en enctype="multipart/form-data"--}}
    <form action="/article" method="post" enctype="multipart/form-data">
        <input type="text" name="title" placeholder="Title" required>
        </br>
        {{!-- Pour l'image --}}
        <input type="file" name="imgArticle" required>
        </br>
        <button type="submit">Confirmer</button>
    </form>
</div>
